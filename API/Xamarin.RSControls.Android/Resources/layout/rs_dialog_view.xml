
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:outlineProvider="none"
        android:visibility="gone"
        android:backgroundTint="@android:color/holo_red_dark"
        android:tint="@android:color/white"
        android:background="@drawable/rsovalshapedrawable"
        android:src="@android:drawable/ic_menu_close_clear_cancel"/>

    <View
        android:id="@+id/arrow"
        android:elevation="7dp"
        android:outlineProvider="none"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <Xamarin.RSControls.Droid.Controls.CustomLinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp" android:gravity="center_horizontal"
        android:divider="?android:dividerVertical"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/contentView"
            android:layout_width="match_parent"
            android:layout_height="0dp" 
            android:layout_weight="1" android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/dialog_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Message" 
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:id="@+id/dialog_message"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            style="?android:buttonBarStyle"
            android:divider="?android:dividerHorizontal"
            android:showDividers="middle">

            <Xamarin.RSControls.Droid.Controls.RSAndroidButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/action_destructive"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Remove"
                android:textAllCaps="false"
                android:visibility="gone"
                style="?android:buttonBarButtonStyle"/>

            <Xamarin.RSControls.Droid.Controls.RSAndroidButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/action_neutral"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Done"
                android:textAllCaps="false"
                android:visibility="gone"
                style="?android:buttonBarButtonStyle"/>

            <Xamarin.RSControls.Droid.Controls.RSAndroidButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/action_positive"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Cancel"
                android:textAllCaps="false"
                android:visibility="gone"
                style="?android:buttonBarButtonStyle"/>


        </LinearLayout>

    </Xamarin.RSControls.Droid.Controls.CustomLinearLayout>

</RelativeLayout>