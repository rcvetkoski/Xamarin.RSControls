                </rs:RSTabbedViews.Views>
            </rs:RSTabbedViews>

            <rs:RSEntry x:Name="entry" Placeholder="No left icon" ShadowColor="Gray" RSEntryStyle="OutlinedBorder" HasRighIconSeparator="True" HasLeftIconSeparator="True" Helper="Helper message!">
                <rs:RSEntry.Behaviors>
                    <validators:ValidationBehaviour PropertyName="Text">
                        <validators:ValidationBehaviour.Validators>
                            <validators:RequiredValidation/>
                        </validators:ValidationBehaviour.Validators>
                    </validators:ValidationBehaviour>
                </rs:RSEntry.Behaviors>
            </rs:RSEntry>

            <Button Text="update entry" Clicked="updateEntry"/>

        </StackLayout>


        
